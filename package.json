    "eslint-plugin-standard": "^2.0.1"
  },
  "ava": {
    "failFast": true,
    "serial": true,
    "watch": true,
    "verbose": true
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "prefer-const": "warn"
    }
  }
}
